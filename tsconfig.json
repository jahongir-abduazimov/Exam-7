{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,
        "paths": {
            "@/*": ["./*"],
            "@interfaces": ["./src/interface"],
            "@utils": ["./src/utils"],
            "@pages": ["./src/pages"],
            "@services": ["./src/service"],
            "@modals": ["./src/components/modals"],
            "@notification": ["./src/utils/notification.ts"],
            "@data-service": ["./src/utils/data-service.ts"],
            "@global-table": ["./src/components/ui/global-table.tsx"],
            "@global-pagination": ["./src/components/ui/global-pagination.tsx"],
        },
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src"],
    "references": [{"path": "./tsconfig.node.json"}]
}
